# Django環境設定ファイル
# 本ファイルを .env にコピーして設定を調整してください

# デバッグモード (本番環境では False に設定)
DEBUG=True

# シークレットキー (本番環境では必ず変更)
SECRET_KEY=your-secret-key-here

# 許可されたホスト (本番環境では適切に設定)
ALLOWED_HOSTS=localhost,127.0.0.1,5d35-153-240-253-154.ngrok-free.app

# CSRF信頼できるオリジン (ngrok使用時)
CSRF_TRUSTED_ORIGINS=https://5d35-153-240-253-154.ngrok-free.app,http://127.0.0.1:8000,http://localhost:8000

# データベース設定
DATABASE_ENGINE=django.db.backends.sqlite3
DATABASE_NAME=db.sqlite3
DATABASE_USER=
DATABASE_PASSWORD=
DATABASE_HOST=
DATABASE_PORT=

# PostgreSQL使用時は以下を使用 (コメントアウト解除)
# DATABASE_URL=postgresql://postgres:postgres@db:5432/student_progress_db

# タイムゾーン
TIME_ZONE=Asia/Tokyo

# 言語設定
LANGUAGE_CODE=ja

# 静的ファイル設定
STATIC_URL=/static/
STATIC_ROOT=staticfiles/
MEDIA_URL=/media/
MEDIA_ROOT=media/

# ログレベル
LOG_LEVEL=INFO

# Slack統合 (オプション)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL_ID=your-channel-id

# 外部API (AI機能用、オプション)
OPENAI_API_KEY=your-openai-api-key